@using OgrenciNotMvc.Models.EntityFramework
@model List<tblOgrenciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğrenciler</h2>
<table class=" table d-block table-bordered">
    <tr>
        <th> Öğrenci ID</th>
        <th> Öğrenci Adı </th>
        <th> Öğrenci Soyadı </th>
        <th> Öğrenci Fotoğrafı </th>
        <th> Öğrenci Cinsiyeti </th>
        <th> Öğrenci Kulüp </th>
        <th> İŞLEMLER </th>




    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>
                    @ogr.OGRENCIID
                </td>
                <td>
                    @ogr.OGRENCIAD
                </td>
                <td>
                    @ogr.OGRENCISOYADI
                </td>
                <td>
                    @ogr.OGRENCIFOTOGRAF
                </td>
                <td>
                    @ogr.OGRENCICINSIYET
                </td>
                <td>
                    @ogr.OGRENCIKULUP
                </td>
                <td>
                    <a href="/Ogrenci/Sil/@ogr.OGRENCIID"class="btn btn-danger"> Sil </a>
                    <a href="/Ogrenci/Sil/@ogr.OGRENCIID"class="btn btn-success"> Güncelle</a>
                </td>

            </tr>
        }
    </tbody>

</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary"> Yeni Öğrenci Kaydı</a>



