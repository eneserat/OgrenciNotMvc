@model OgrenciNotMvc.Models.EntityFramework.tblOgrenciler
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Ögrenci Sayfası </h2>
<form method="post" class="form-group">
    <div style="margin-top:10px">
        <label>
            Öğrenci Adı :
        </label>
        <input type="text" class="form-control" name="OGRENCIAD" />
    </div>
    <div style="margin-top:10px">
        <label>
            Öğrenci Soyadı :
        </label>
        <input type="text" class="form-control" name="OGRENCISOYADI" />
    </div>
    <div style="margin-top:10px">
        <label>
            Öğrenci Fotoğrafı :
        </label>
        <input type="file" class="form-control" name="OGRENCIFOTOGRAF" />
    </div>
    <div style="margin-top:10px">
        <label>
            Öğrenci Cinsiyeti :
        </label>
        <input type="radio" name="OGRENCICINSIYET" value="Erkek"> Erkek
        <input type="radio" name="OGRENCICINSIYET" value="Kadın"> Kadın
    </div>
    <div>
        <label>
            Öğrenci Kulübü:
        </label>
        @Html.DropDownListFor(m => m.tblKulupler.KULUPID, (List<SelectListItem>)ViewBag.dgr, new {@class ="form-control"})
    </div>
    <div style="margin-top:10px">
        <button class="btn btn-primary">
            Öğrenci Ekle

        </button>
    </div>
    

</form>


